@import 'nib'

body.web2py-overrides--v1

  h2
    margin 30px 0px
 
  label
    width 75px
    padding-right 20px
    text-align right
    font-weight bold
    text-transform lowercase
    margin-top 5px

  input
    min-width 200px


    &[type='submit']
      border 1px solid #00940A
      background #80E386
      color #006407
      font-weight bold
      text-transform lowercase
      width 212px
      text-shadow none


.web2py_grid tr:hover
  background none


body.web2py-index-page--v1
  col[data-column='3']
    width 700px

