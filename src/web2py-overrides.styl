@import 'nib'

body.web2py-overrides--v1
  
  form
    padding 20px
    border 1px solid #e5e5e5
    background #f5f5f5
    margin 20px 0px 10px 0px

  h2
    margin 30px 0px
 
  label
    min-width 100px
    padding-right 20px
    text-align right
    font-weight bold
    text-transform lowercase
    margin-top 5px

  input
    min-width 200px


    &[type='submit']
      background #7ec135
      border 2px
      border-color #7ec135
      display block
      width 100%
      font-weight bold
      text-transform lowercase
      width 212px
      padding 10px 20px
      text-shadow none
      color #fff

      &:focus
        outline none
    margin 20px 0px 10px 0px

  a 
    border 2px
    font-weight bold
    text-transform lowercase
    width 212px
    padding 10px 20px
    text-shadow none
    color #fff

  a:first-child
    background #7ec135
    border-color #7ec135
    
  a:nth-child(2)
    background #099A94
    border-color darken(#099A94, 5)

  a:nth-child(3)
    background #32177e
    border-color #4823b0


.web2py_grid tr:hover
  background none


body.web2py-index-page--v1
  h2
    margin-top 30px

  .actions
    margin 20px 0px 10px 0px

    a 
      border 2px
      font-weight bold
      text-transform lowercase
      width 212px
      padding 10px 20px
      text-shadow none
      color #fff

    a:first-child
      background #7ec135
      border-color #7ec135
      
    a:nth-child(2)
      background #099A94
      border-color darken(#099A94, 5)

    a:nth-child(3)
      background #32177e
      border-color #4823b0

  //col[data-column='3']
  //  width 700px

  table
    border 1px solid #e5e5e5

  thead
    border-bottom 1px solid #e5e5e5
    background #f5f5f5

    th
      background none
      text-shadow none
      border-right none

      a
        color #333

    th:last-child
      background none

  tr.w2p_odd
    background #f5f5f5

  a.btn
    text-shadow: none;
    border-radius: 0px;