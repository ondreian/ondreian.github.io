@import 'nib'

error_red = #BD0500
warning_yellow = #FFCC4F
ok_green = #40D049

body.lesson--v1
  
  .lesson-percent--v1
    margin-left 10px
    font-size 12px
    width 10px
    padding 5px
    border-radius 20px
    background #e5e5e5
    color #333

  .current-part--v1

    > img
      padding 10px


  form.lesson-holder--v1
    padding-top 50px

  .states-container--v1
    padding-bottom 20px
    margin-bottom 30px
    background #f5f5f5
    border 1px solid #e5e5e5
    overflow hidden

  .column--v1
    padding 0px 5px
    margin-left 0px
    height 100%
    //100% height hack for Bootstrap
    padding-bottom 181px
    margin-bottom -181px
    

  .column--v1:not(:last-child)
    border-right 1px solid #e5e5e5

  .variable-wrapper--v1
    padding 7px 5px
    font-weight bold
    text-transform lowercase

    input
      display block
      width 148px
      border-radius 0px
      padding 5px
      margin-top 5px

      &:not(#mysession_Session_Name)
        border-color #7ec135

        &:disabled, &[readonly]
          border 1px dashed #c0c0c0

          &:focus
            outline none
            border 1px dashed #c0c0c0
            box-shadow none

  .errors-column--v1
    padding-top 20px
    padding-left 20px

  ul.errors-wrapper--v1
    list-style-type none
    padding 0
    margin 0

    li
      margin 0
      padding 10px 5px
      display block
      overflow hidden
      // Stops pseudo animation in Chrome/FF for floating stacked elements
      height 20px
      line-height 20px

      span.icon,
      span.error-name
        display block
        float left

      span.error-name
        width 150px
        font-weight bold
        text-transform lowercase

      span.icon
        width 10px
        font-size 20px
        text-align center

    li.error
      span.icon
        span.ion-lightbulb
          display inline
          color error_red

    li.warn
      span.icon
        span.ion-lightbulb
          display inline
          color warning_yellow

    li.ok
      span.icon
        span.ion-lightbulb
          display inline
          color ok_green

  .left-column--v1
    .left-column-content--v1
      padding 0px 10px

    h6
      padding 0px 15px
      font-size 16px

      span[class*="ion"]
        margin-right 7px

    ol
      list-style-type none
      padding 10px
      margin 0px

      li
        margin 10px 0px
        padding 0px

      input
        text-transform lowercase
        font-weight normal
        background #7ec135
        border 2px
        border-color #7ec135
        font-weight bold
        text-transform lowercase
        text-shadow none
        color #fff

    img
      display block
      border 1px solid #e5e5e5
      width 540px
      margin-bottom 15px
      background #fff

    audio
      display block
      margin 10px 0px
      width 540px
      border-radius 0px

    video
      width 540px

    p input
      display block
      margin 10px
      width 100px
      background #7ec135
      border 2px
      border-color #7ec135
      font-weight bold
      text-transform lowercase
      padding 10px 20px
      text-shadow none
      color #fff

    .actions
      padding 10px 0px
      width 330px
      margin 0 auto

      .btn
        text-transform lowercase
        font-weight normal
        width 100px
        background #7ec135
        border 2px
        border-color #7ec135
        padding 10px 20px
        text-shadow none
        color #fff

        &:focus
          outline none

        &[disabled]
          background #e5e5e5
          border 1px dashed #c0c0c0
          color #888


  .right-column--v1

    .right-column-content--v1
      padding 0px 10px

      > h3
        font-size 18px
      > p
        padding 10px
        border #e5e5e5
        margin 10px 0px
        background #f5f5f5