@import 'nib'

error_red      = #BD0500
warning_yellow = #FFCC4F
ok_green       = #40D049

// For Theme
light_grey     = #f7f7f7
grey           = #f2f2f2
dark_grey      = #e5e5e5

accent         = #292929

body.lesson--v1
  .flash--v1
    padding 10px
    border 1px solid error_red
    background lighten(error_red, 30)
    color #f1f1f1
    margin-bottom 20px
  
  .lesson-percent--v1
    margin-left 10px
    font-size 12px
    width 10px
    padding 5px
    border-radius 20px
    background dark_grey
    color #333



  form.lesson-holder--v1
    padding-top 30px

  .states-container--v1
    padding-bottom 10px
    background light_grey
    border 1px solid dark_grey
    overflow hidden

  .column--v1
    padding 0px 13px
    margin-left 0px
    height 100%
    //100% height hack for Bootstrap
    padding-bottom 300px
    margin-bottom -300px
    color #666
    
    h4 
      text-align center   
      color #3e3e3e
      font-size 14px
      margin 5px 0px

    &:not(:last-child)
      border-right 1px solid dark_grey

    .fillrate
      margin-right 15px



  .variable-wrapper--v1
    padding 1px 5px 2px 5px
    font-size 12px
    text-transform lowercase

    input
      display block
      width 148px
      border-radius 0px
      padding 5px
      margin-top 5px
      border-color #7ec135

      &:disabled, &[readonly]
        border 1px solid #c0c0c0

        &:focus
          outline none
          border 1px dashed #c0c0c0
          box-shadow none

  .gradient--v1
    width 410px
    margin-left 0px
    background-color #f1f1f1
    background-image linear-gradient(#f1f1f1,#e5e5e5)
    height 100%
    //100% height hack for Bootstrap
    padding-bottom 300px
    margin-bottom -300px

  .column--v1.outputs-column--v1,
  .errors-column--v1
    border-right 0px

  .column--v1.outputs-column--v1
    input[readonly]
      border 1px solid dark_grey

  .errors-column--v1
    padding-left 30px

  ul.errors-wrapper--v1
    list-style-type none
    padding 0
    margin 0

    li
      margin 0
      padding 10px 0px
      display block
      overflow hidden
      // Stops pseudo animation in Chrome/FF for floating stacked elements
      height 20px
      line-height 20px

      span.icon,
      span.error-name
        display block
        float left

      span.error-name
        width 150px
        font-weight bold
        text-transform lowercase

      span.icon
        width 10px
        font-size 20px
        text-align center

    li.error
      span.icon
        span.ion-lightbulb
          display inline
          color error_red

    li.warn
      span.icon
        span.ion-lightbulb
          display inline
          color warning_yellow

    li.ok
      span.icon
        span.ion-lightbulb
          display inline
          color ok_green

  .left-column--v1
    margin-left 0px
    //width 600px

    .left-column-content--v1
      padding 10px 0px

    h6
      padding 0px 15px
      font-size 16px

      span[class*="ion"]
        margin-right 7px

    ol
      list-style-type none
      padding 10px
      margin 0px

      li
        margin 10px 0px
        padding 0px

      input
        text-transform lowercase
        font-weight normal
        background #7ec135
        border 2px
        border-color #7ec135
        font-weight bold
        text-transform lowercase
        text-shadow none
        color #fff


    img
      display block
      border 1px solid dark_grey
      //width 100%
      max-height 300px
      margin-bottom 15px
      background #fff

    audio
      display block
      margin 10px 0px
      width 100%
      border-radius 0px

    video
      width 540px

    p input
      display block
      margin 10px
      width 100px
      background #7ec135
      border 2px
      border-color #7ec135
      font-weight bold
      text-transform lowercase
      padding 10px 20px
      text-shadow none
      color #fff

    .actions
      padding 10px 0px
      

      .btn
        font-weight normal
        width 96px
        background #7ec135
        border 2px
        border-color #7ec135
        padding 10px 20px
        text-shadow none
        color #fff
        margin-right 0px

        &:not(:last-child)
          margin-right 5px

        &:focus
          outline none

        &[disabled]
          background dark_grey
          border 1px solid #c0c0c0
          color #555


  .right-column--v1
    margin-left 60px

    .right-column-content--v1
      padding 10px 0px

      > h3
        font-size 18px

      > p
        padding 10px
        border dark_grey
        margin 0px 0px 20px 0px
        background light_grey

      .current-part--v1
        border 1px solid dark_grey

        > h4
          margin 0px 0px 15px 0px
          padding 10px
          border-bottom 1px solid dark_grey
          background light_grey

        > img
          padding 5px 0px 20px 0px
          display block
          margin 0 auto

  h6
    font-weight 16px
    padding 5px
    margin-bottom 10px

    &.incorrect
      color #bd0500

    &.summary
      color #7ec135

    &.information
      color #40699D

    &.question
      color #099A94

    &.control-change
      color #32177e


    span:first-child
      margin-right 20px
