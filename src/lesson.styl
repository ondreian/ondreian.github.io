@import 'nib'

error_red = #BD0500
warning_yellow = #FFCC4F
ok_green = #40D049

body.lesson--v1
  
  .lesson-header--v1
    margin-bottom 20px
    float left

  .current-part--v1
    float right

    > img
      max-height 80px
      padding 0px 30px


  form.lesson-holder--v1
    padding-top 50px

  .states-container--v1
    padding-bottom 20px
    margin-bottom 30px
    background #f5f5f5
    border 1px solid #e5e5e5
    overflow hidden

  .column--v1
    padding 0px 5px
    margin-left 0px
    height 100%
    //100% height hack for Bootstrap
    padding-bottom 181px
    margin-bottom -181px
    

  .column--v1:not(:last-child)
    border-right 1px solid #e5e5e5

  .variable-wrapper--v1
    padding 7px 5px
    font-weight bold
    text-transform lowercase

    input
      display block
      width 148px
      border-radius 0px
      padding 5px
      margin-top 5px

      &:disabled, &[readonly]
        border 1px dashed #c0c0c0

        &:focus
          outline none
          border 1px dashed #c0c0c0
          box-shadow none

  .errors-column--v1
    padding-top 20px
    padding-left 20px

  ul.errors-wrapper--v1
    list-style-type none
    padding 0
    margin 0

    li
      margin 0
      padding 10px 5px
      display block
      overflow hidden
      // Stops pseudo animation in Chrome/FF for floating stacked elements
      height 20px
      line-height 20px

      span.icon,
      span.error-name
        display block
        float left

      span.error-name
        width 150px
        font-weight bold
        text-transform lowercase

      span.icon
        width 10px
        font-size 20px
        text-align center

        span
          display none

    li.error
      span.icon
        span.ion-alert
          display inline
          color error_red

    li.warn
      span.icon
        span.ion-lightbulb
          display inline
          color warning_yellow

    li.ok
      span.icon
        span.ion-lightbulb
          display inline
          color ok_green

  .audio-wrapper--v1
    img
      display block
      margin-bottom 20px
      border 1px solid #e5e5e5
      max-width 290px
      padding 15px

    audio
      display block
      margin 10px 0px
      width 320px
      border-radius 0px

  .actions
    padding 10px 0px

    .btn
      text-transform lowercase
      width 100px
      border-radius 0px