// This is where all of the global changes live

error_red      = #BD0500
warning_yellow = #FFCC4F
ok_green       = #40D049


*
  font-family: 'Lato', sans-serif;

// Special overrides for bootstrap

/*
  @media (min-width 1200px)
    [class*="span"]
      margin-left 0px
*/

textarea, 
input[type="text"], 
input[type="password"], 
input[type="datetime"], 
input[type="datetime-local"], 
input[type="date"], 
input[type="month"], 
input[type="time"], 
input[type="week"], 
input[type="number"], 
input[type="email"], 
input[type="url"], 
input[type="search"], 
input[type="tel"], 
input[type="color"], 
.uneditable-input
  //width 300px
  border-radius 0px

  &:focus
    outline none
    box-shadow none

.footer
  border-top 0px

img.logo--v1
  height 50px

.btn
  border-radius 0px
  text-transform capitalize
  padding 5px 20px
  font-weight bold
  

  &.btn-default
    background #e5e5e5
    border 1px solid #c0c0c0
    text-shadow none
    border-radius 0px

.web2py_grid .row_buttons a
  padding 5px 20px

// Special overrides for web2py

.footer-content
  bottom 0px

.green
  color ok_green

.btn.green
  background ok_green
  color #f1f1f1

.red
  color error_red

.btn.red
  background error_red
  color #f1f1f1